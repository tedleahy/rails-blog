<!DOCTYPE html>
<html>
  <head>
    <title>TedBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container">
      <% if @back_link %>
        <div class="mt-4">
          <%= link_to '← ' + @back_link[:text], @back_link[:url] %>
        </div>
      <% end %>

      <div class="p-4">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
